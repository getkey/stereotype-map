@require 'colors.styl'

user-select($arg)
	-webkit-user-select: $arg
	-moz-user-select: $arg
	-ms-user-select: $arg
	user-select: $arg

body
	margin: 0
	background-color: $sea

html, body
	overflow: auto // workaround Chrome mobile bug http://stackoverflow.com/a/14569741

html, body, #app, svg
	height: 100%

.github-fork-ribbon::before
	background-color: #333

svg
	user-select(none)
	display: block
	margin: auto

$abs-offset = 1.75rem
$shadow-params = 0 0 2px $sea
#stereotype-box
	position: fixed
	bottom: $abs-offset
	left: $abs-offset
	background-color: $land
	padding: 2rem
	box-shadow: $shadow-params

	.status
		color: #303030
		font-size: 0.9rem

#info
	position: fixed
	bottom: $abs-offset
	right: $abs-offset
	margin-left: $abs-offset

	#info-button
		box-shadow: $shadow-params
		background-color: $land
		font-size: 2rem
		border-radius: 50%
		width: 4rem
		height: 4rem
		text-align: center
		display: table-cell
		vertical-align: middle

	#explanation
		box-shadow: $shadow-params
		background-color: $land
		padding: 1rem
